---
import Footer from '@components/layout/Footer.astro'
import Header from '@components/layout/Header.astro'
import { ClientRouter } from 'astro:transitions'
import BaseHead, { type Props as HeadProps } from './BaseHead.astro'

export type Props = HeadProps

const { ...head } = Astro.props
---

<!doctype html>
<html lang="en" class="break-words antialiased">
  <head>
    <BaseHead {...head} />
    <ClientRouter />
  </head>
  <body class="bg-white text-slate-700">
    <div class="flex min-h-screen flex-col">
      <Header class="border-b border-slate-100 bg-slate-50" />
      <slot />
      <Footer />
    </div>
  </body>
</html>
